<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h3>Welcome <%= current_user_role_is? + " " + logged_in_session_owning_user.name.to_s%></h3>
        <div class="row pull-right">
          <div class="add-user-btn">
            <%#= link_to 'Extended contacts', contacts_extended_path, :class => 'btn btn-info' %>
            <%= link_to 'Logout', login_logout_path, :class => 'btn btn-info' %>
          </div>
        </div>
      </div>
      <h4>Calls to be made: </h4>
      <div class="card-body">
        <div class="text-center">
        </div>
        <div class="table-responsive">
          <table class="table" title="Calling Task">
            <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>Designation</th>
              <th>Call</th>
            </tr>
            </thead>
            <tbody>

            <% @customer.each do |c| %>
              <tr>
                <td><%= c.Name %></td>
                <td><span><%= c.Email %></span></td>
                <td><span><%= c.Mobile_No %></span></td>
                <td><span><%= c.Designation %></span></td>
                <td><%= link_to 'Call ', "#", :class => 'btn btn-info' %></td>
              </tr>
            <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>
