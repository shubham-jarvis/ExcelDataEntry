<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">

        <h4>Call logs list </h4>
      </div>
      <div class="card-body">
        <div class="text-center">
        </div>
        <div class="table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th>Call Id</th>
              <th>Customer Name</th>
              <th>Agent Name</th>
              <th>Remarks</th>
              <th>Description</th>
              <th>Reason</th>
            </tr>
            </thead>
            <tbody>

            <% @call_log.each do |call| %>
              <tr>
                <td><%= call.call_id %></td>
                <td><span><%= Customer.find(call.customer_id).Name %></span></td>
                <td><span><%= User.find(call.user_id).name %></span></td>
                <td><span><%= (call.remarks == nil || call.remarks == '') ? 'N/A' : call.remarks %></span></td>
                <td><span><%= (call.description == nil || call.description == '') ? 'N/A' : call.description %></span>
                </td>
                <td><span><%= (call.reason == nil || call.reason == '') ? 'N/A' : call.reason %></span></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>