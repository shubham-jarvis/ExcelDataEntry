<div class="row">
  <div class="col-lg-12">
    <div class="card">
            <div class="card-title">
              <h4>Enter your call details</h4>

            </div>
      <div class="card-body">
        <div class="basic-form col-md-5">
          <%= form_for @call_log, url: '/call_logs' do |f| %>
            <div class="form-group">
              <p>
                <%= f.label :call_id %><br>
                <%= f.text_field(:call_id, {:class => 'form-control input-flat', :readonly => true}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :user_id %><br>
                <%= f.text_field(:user_id, {:class => 'form-control input-flat', :readonly => true}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :customer_id %><br>
                <%= f.text_field(:customer_id, {:class => 'form-control input-flat', :readonly => true}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :status %><br>
                <%= f.text_field(:status, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :remarks %><br>
                <%= f.text_field(:remarks, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :description %><br>
                <%= f.text_field(:description, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :reason %><br>
                <%= f.text_field(:reason, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <p>
              <%= f.submit({:class => 'btn btn-info'}) %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>