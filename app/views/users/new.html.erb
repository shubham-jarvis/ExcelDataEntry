<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h4>Add new user</h4>

      </div>
      <div class="card-body">
        <div class="basic-form col-md-5">
          <%= form_for :user, url: '/users' do |f| %>
            <div class="form-group">
              <p>
                <%= f.label :name %><br>
                <%= f.text_field(:name, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :email %><br>
                <%= f.text_field(:email, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :mobile %><br>
                <%= f.text_field(:mobile, {:class => 'form-control input-flat'}) %>
              </p>
            </div>
            <div class="form-group">
              <p>
                <%= f.label :role_id %><br>
                <%= f.collection_select :role_id, Role.all, :id, :title, {:include_blank => 'Select Role'}, {:class => 'multiple-entry-dropdown styleSelect'} %>
              </p>
            </div>
            <p>
              <%= f.submit({:class => 'btn btn-info'}) %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>